{
  "manifest_version": 3,
  "name": "YouTube Watch Together",
  "version": "0.2.8",
  "description": "Toby's pathetic attempt at a YouTube Watch Together extension",
  "icons": {
    "16": "images/logo.png",
    "32": "images/logo.png",
    "48": "images/logo.png",
    "128": "images/logo.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.youtube.com/*"
      ],
      "js": [
        "main.js"
      ]
    }
  ],
  "action": {
    "default_popup": "popup/popup.html"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "type": "module"
  },
  "permissions": [
    "tabs",
    "storage"
  ],
  "host_permissions": [
    "*://youtube.com/*"
  ]
}
